import type { NextApiRequest, NextApiResponse } from 'next'
import { createClient } from '@supabase/supabase-js'

const supabase = createClient(
  process.env.NEXT_PUBLIC_SUPABASE_URL as string,
  process.env.SUPABASE_SERVICE_ROLE_KEY as string,
  { auth: { persistSession: false } }
)

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  if (req.method !== 'GET') {
    return res.status(405).json({ error: 'Method not allowed' })
  }

  try {
    const { style, room_type, min_ping, max_ping, from, to } = req.query as Record<string, string | undefined>

    // 這裡只選歷史頁會用到的欄位
    let q = supabase
      .from('quotes')
      .select('id, quote_date, client_name, address, style, room_type, base_ping, grand_total, created_at')
      .order('quote_date', { ascending: false })
      .limit(500)

    if (style && style !== '全部')     q = q.eq('style', style)
    if (room_type && room_type !== '全部') q = q.eq('room_type', room_type)
    if (min_ping) q = q.gte('base_ping', Number(min_ping))
    if (max_ping) q = q.lte('base_ping', Number(max_ping))
    if (from)     q = q.gte('quote_date', from)
    if (to)       q = q.lte('quote_date', to)

    const { data, error } = await q
    if (error) throw error

    return res.status(200).json({ data })
  } catch (e: any) {
    console.error('list-quotes error', e)
    return res.status(500).json({ error: e?.message || 'Server error' })
  }
}
